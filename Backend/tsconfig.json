{
  "compilerOptions": {
    "target": "ES2016",                           // JavaScript version
    "module": "commonjs",                         // For Node.js compatibility
    "rootDir": "./src",                           // Source directory
    "outDir": "./dist",                           // Output compiled JS to /dist
    "baseUrl": "./src",                           // Base path for module resolution
    "esModuleInterop": true,                      // Allow default imports from CJS
    "forceConsistentCasingInFileNames": true,     // Case-sensitive imports
    "strict": true,                               // Enable all strict checks
    "skipLibCheck": true,                         // Skip .d.ts type checks
    "typeRoots": ["./node_modules/@types"],       // Type declarations
    "resolveJsonModule": true,                    // Allow importing .json files
    "allowSyntheticDefaultImports": true          // Allow default import compatibility
  },
  "include": ["src"],                             // Include only src files
  "exclude": ["node_modules", "dist"]             // Ignore node_modules and dist
}
